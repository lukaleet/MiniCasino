        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Graj" Margin="5" FontSize="16">
                <MenuItem x:Name="SlotsScreen" Header="_Automaty"></MenuItem>
                <MenuItem x:Name="RouletteScreen" Header="_Ruletka"></MenuItem>
                <MenuItem x:Name="BlackjackScreen" Header="_Blackjack"></MenuItem>
            </MenuItem>
            
            <MenuItem Header="_Pomoc" Margin="5" FontSize="16">
                <MenuItem x:Name="HelpScreen" Header="_Zasady Gry"></MenuItem>
            </MenuItem>
            
        </Menu>
        <Grid>
            <ContentControl x:Name="ActiveItem" Margin="5"></ContentControl>
        </Grid>
    </DockPanel>
</Window>
